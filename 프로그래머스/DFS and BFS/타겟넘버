 
def solution(numbers, target):
    num_len= len(numbers)-1
    global count
    count=0
    def dfs(t,id):
        
            
        t_plus=t+numbers[id]
        t_minus=t-numbers[id]
        if id!=num_len:
            
            dfs(t_plus,id+1)
            dfs(t_minus,id+1)
        else:
            if t_plus==target or t_minus==target:
                global count
                count+=1
        
    dfs(0,0)
        
        

    return count
